/* pages/personInfo/personInfo.wxss */
.list-wrap .list{
  width:90%;
  overflow: hidden;
  padding:35rpx 5%;
  border-bottom:1px solid #F8F8F8;
  background: #ffffff;
  position:relative;
  color:#444444;
  display: flex;
  align-items: center;
}
.label{
  width: 40%;
}
.val{
  width: 55%;
  text-align: left;
}
.list-wrap .list .val input{
  text-align: right;
  /* border:1px solid red; */
}
.list-wrap .list .function image{
  width:30rpx;
  height:30rpx;
  transform:rotate(180deg);
}
.btn{
  position:fixed;
  width:90%;
  left:0;
  right: 0;
  color: #fff;
  margin:0 auto;
  font-size:30rpx;
  text-align: center;
  letter-spacing: 4rpx;
  bottom: 20rpx;
  height:80rpx;
  line-height: 80rpx;
  background:linear-gradient(132deg,rgba(30,105,198,1) 0%,rgba(72,50,197,1) 100%);
}
