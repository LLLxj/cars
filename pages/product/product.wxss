.wrap{
  width:100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  overflow: auto;
}
.list{
  width:100%;
  padding: 20rpx 0;
  /* height: 180rpx; */
  display: flex;
  box-sizing: border-box;
  align-items: center;
  background: #ffffff;
  border-bottom:1px solid #efefef;
}
.logo{
  font-size: 0;
  margin: 0 0 0 20rpx; 
}
.logo image{
  width:150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}
.info{
  flex: 1;
  margin: 0 20rpx 0 0;
  display: flex;
  height: 150rpx;
  flex-direction: column;
  margin: 0 0 0 30rpx;
}
.row{
  display: flex;
}
.name{
  font-size: 30rpx;
  width: 380rpx;
}
.status{
  padding: 0 10rpx;
  font-size: 22rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #fff;
  border-radius:5px;
  margin: 0 0 0 10rpx;
  background: #67c23a;
  text-align: center;
}
.time{
  font-size: 24rpx;
}
.staff{
  margin: 20rpx 0 0 0;
  font-size: 24rpx;
}
.time{
  margin: 10rpx 0 0 0;
}
.function{
  flex: 1;
  text-align: center;
}
.function image{
  width:30rpx;
  height:30rpx;
  transform:rotate(180deg);
}
.index{
  width:40rpx;
  height:40rpx;
  margin-left:24rpx;
  color:#fff;
  font-size:30rpx;
  text-align: center;
  border-radius:50%;
  background-color: rgb(29,170,249);
}
.chapter-name{
  width:60%;
  font-size:30rpx;
  /* margin-left:30rpx; */
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.isSubmit{
  /* margin-left:26rpx; */
  font-size:30rpx;
}
.record-info{
  width:90%;
  overflow: hidden;
  padding:25rpx 0 10rpx 0;
  /* margin-top:30rpx; */
  font-size: 24rpx!important;
  color:#676767;
}
.showAd{
  margin-left: 26rpx;
  font-size: 20rpx!important;
  color:#fff!important;
  border-radius:5px;
  padding:5rpx 25rpx;
  margin-top:5rpx;
}
.no-data-wrap{
  width: 80%;
  margin: 100rpx auto;
}
.noData{
  /* width: 80%; */
  width:320rpx;
  margin: 0 auto;
  text-align: center;
}
.noData image{
  width: 100%;
  margin:0 auto;
  /* width:100%; */
}
.noData-text{
  width:100%;
  text-align: center;
}

.btn{
  position:fixed;
  width:90%;
  left:0;
  right: 0;
  color: #fff;
  margin:0 auto;
  font-size:30rpx;
  text-align: center;
  letter-spacing: 4rpx;
  bottom: 20rpx;
  height:80rpx;
  line-height: 80rpx;
  background:linear-gradient(132deg,rgba(30,105,198,1) 0%,rgba(72,50,197,1) 100%);
}
.checking{
  background: #409eff;
}
.fail{
  background: #909399;
}
.success{
  background: #85ce61;
}
.delete{
  background: #e6a23c;
}