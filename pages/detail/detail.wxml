<view class="wrap">

  <!-- 轮播 -->
  <view class="swiper">
    <swiper style="height:500rpx;"
      autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}"
      bindchange="changeCurrent">
      <block wx:for="{{carInfo.waresImages}}" wx:key="*this">
        <swiper-item>
          <view class="swiper-item">
            <image src="{{item.image}}" mode="widthFix" model="aspectFit" style="width: {{imageWidth}}px;"></image>
          </view>
        </swiper-item>
      </block>
    </swiper>

    <!-- 轮播index -->
    <view class="item-index">{{current}} / {{picList.length}}</view>

    <!-- 更新时间 -->
    <view class="postTime">{{postTime}}</view>
  </view>

  <view class="price-info">
    <view class="infotitle">{{carInfo.infotitle}}</view>
    <view class="price-detail">
      <!-- 二手车价格 -->
      <view class="ershou-price">
        <view class="price">{{carInfo.erchouchePrice}}万元</view>
        <view class="title">(含过户费)</view>        
      </view>

      <!-- 新车价格 -->
      <view class="pre-price">
        <view class="price">{{carInfo.erchouchePrice}}万元</view>
        <view class="title">查看估值 ></view>
      </view>

      <!-- 预估价格 -->
      <view class="yishou-price">
        <view class="price">{{carInfo.erchouchePrice}}万元</view>
        <view class="title">新车价格</view>
      </view>
    </view>
  </view>

  <view class="line"></view>
  

  <!-- 车辆信息 -->
  <view class="cars-info">
    <view class="list">
      <view class="data shangpainianyue">{{carInfo.shangpainianyue}}</view>
      <view class="title">上牌时间</view>
    </view>
    <view class="list">
      <view class="data rundistance">{{carInfo.rundistance}}</view>
      <view class="title">1.3万公里/年</view>
    </view>
    <view class="list">
      <view class="data paifangbiaozhun">{{carInfo.paifangbiaozhun || '国家标准'}}</view>
      <view class="title">排放</view>
    </view>
    <view class="list">
      <view class="data displacement">{{carInfo.displacement}}</view>
      <view class="title">油耗:6.6L</view>
    </view>
    <view class="list">
      <view class="data cheshenyanse">{{carInfo.cheshenyanse}}</view>
      <view class="title">车身颜色</view>
    </view>
    <view class="list">
      <view class="data quyu">{{carInfo.quyu}}</view>
      <view class="title">所在地</view>
    </view>
  </view>

  <view class="line"></view>

  <!-- 配置信息 -->
