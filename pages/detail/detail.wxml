      <view class="name"></view>
    </view>
    <view class="list">
      <view class="icon"></view>
      <view class="name"></view>
    </view>
  </view> -->

  <!-- 整体简介 -->
  <view class="short-desc">
  
    <!-- 车主信息 -->
    <view class="user-info">
      <view class="avatar"></view>
      <view class="place">
        <view class="name">{{userInfo.linkman}}</view>
        <view class="title">发布于{{userInfo.locallist[0].name}}</view>
      </view>
      <view class="phone">
        <view class="icon">
        </view>
        <view class="name">
          电话
        </view>
      </view>
    </view> 

    <!-- 车辆信息 -->
    <view class="car-desc">
      <rich-text nodes="{{carInfo.content}}"></rich-text>
    </view>

  </view>

</view>

<!-- 底部悬浮框 -->
<view class="fixBottom">
  <view class="list share">
    <view class="icon">
      <image src="../../images/share.png" mode="widthFix"></image>
    </view>
    <view class="name">分享</view>
  </view>
  <view class="list phone" bindtap="phoneCall">
    {{userInfo.start}}
  </view>
</view>