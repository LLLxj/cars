.swiper{
  width:100%;
  position: relative;
}
.swiper .item-index{
  position: absolute;
  width:100rpx;
  right:30rpx;
  bottom:30rpx;
  background-color: rgba(0, 0, 0, 0.2);
  color:#fff;
  padding:10rpx 0;
  border-radius:40rpx;
  text-align: center;
  font-size:24rpx;
}
.swiper .postTime{
  position: absolute;
  width:120rpx;
  left:30rpx;
  bottom:30rpx;
  background-color: rgba(0, 0, 0, 0.2);
  color:#fff;
  padding:10rpx 0;
  border-radius:40rpx;
  text-align: center;
  font-size:22rpx;
}
.price-info{
  border:1px solid red;
  padding:0 5% 15rpx 5%;
  font-size:32rpx;
  color:#333333;
}
.price-info .infotitle{
  padding:20rpx 0 10rpx 0;
}
.price-detail{
  overflow: hidden;
}
.price-detail .ershou-price{
  width:25%;
  float:left;
  color:#ff552e;
  font-size:36rpx;
  font-weight:bold;
}
.price-detail .yishou-price{
  width:20%;
  float:right;
  margin-right:2%;
  background: #f7f8fa;
  padding:15rpx 0;
  text-align: center;
}
.price-detail .yishou-price .price{
  color:#292a2c;
  font-size:20rpx;
}
.price-detail .yishou-price .title{
  color:#8e8e90;
  font-size:20rpx;
  margin-top:10rpx;
}

.price-detail .pre-price{
  width:35%;
  float:right;
  text-align: center;
  padding:15rpx 0;
  background: #f7f8fa;
}
.price-detail .pre-price .price{
  color:#292a2c;
  font-size:20rpx;
}
.price-detail .pre-price .title{
  color:#8e8e90;
  font-size:20rpx;
  margin-top:10rpx;
}