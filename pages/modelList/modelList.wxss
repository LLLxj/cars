.wrap{
  width:100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  overflow: auto;
}
.list{
  width:100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  background: #ffffff;
  border-bottom:1px solid #efefef;
}
.logo{
  font-size: 0;
  margin: 0 0 0 20rpx;
  width:80rpx; 
}
.logo image{
  width: 100%;
}
.info{
  font-size:30rpx;
  margin:0 0 0 40rpx;
}

.no-data-wrap{
  width: 80%;
}
.noData{
  /* width: 80%; */
  width:320rpx;
  margin: 0 auto;
  text-align: center;
}
.noData image{
  width: 100%;
  margin:0 auto;
  /* width:100%; */
}
.noData-text{
  width:100%;
  text-align: center;
}
.all-title{
  padding: 10rpx 5%;
  box-sizing: border-box;
  font-size: 26rpx;
  background: #eeeeee;
}
.hot{
  padding: 10rpx 5%;
  box-sizing: border-box;
}
.hot .title{
  font-size: 26rpx;
}
.hot-box{
  display: flex;
  flex-wrap: wrap;
}
.hot-box .item{
  width: 120rpx;
  margin: 10rpx 15rpx 10rpx 0;
}
.hotImg{
  width: 100%;
}
.brandName{
  text-align: center;
  font-size: 24rpx;
}