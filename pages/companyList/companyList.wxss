/* pages/home/home.wxss */
.list-wrap .list{
  width:90%;
  margin:0 auto;
  overflow: hidden;
  /* border:1px solid red; */
  /* padding:15rpx 0; */
  margin-top:15rpx;
}
.info-img{
  width:35%;
  float:left;
}
.info-img image{
  width:100%;
  border-radius:10rpx;
}
/* 介绍开始 */
.info-desc{
  float:right;
  width:62%;
}
.info-desc .title{
  font-size:28rpx;
  font-weight:bold;
  display: -webkit-box;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}
.isCheck text{
  background:#dff6ff;
  color:#318dd0;
  font-size:20rpx;
  padding:2rpx 4rpx;
}

.info_time{
  margin-top:10rpx;
  font-size:24rpx;
  color:#454449;
  display: flex;
  justify-content: space-between;
}
.info_time .buytime{
  /* float:left; */
}
.info_time .postdate{
  /* float:right; */
  text-align: right;
}
.info-desc .price{
  margin-top:5rpx;
  font-size:32rpx;
  font-weight:bold;
  color:#ea6200;
}
/* 介绍结束 */

/* 搜索框开始 */
.serach{
  overflow: hidden;
  width:100%;
  /* border:1px solid #000000; */
  margin-bottom: 20rpx;
}
.serach .list{
  width:25%;
  float:left;
  padding:15rpx 0 0 0;
}
.serach .list .picker{
  overflow: hidden;
}
.picker .location{
  float:left;
  width:50%;
  text-align: right;
  margin-top:5rpx;
  font-size:26rpx;
}
.picker .icon{
  float:left;
  width:50%;
}
.picker .icon image{
  width:50rpx;
}
/* 搜索框结束 */
/* 轮播开始 */
.slide-image{
  width: 100%;
}
/* 轮播结束 */
.company-banner{
  width: 94%;
  margin: 10rpx auto;
  border: 1px solid red;
  font-size: 24rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}