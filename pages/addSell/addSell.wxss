/* pages/personInfo/personInfo.wxss */
.list-wrap .list{
  width:90%;
  overflow: hidden;
  padding:35rpx 5%;
  border-bottom:1px solid #F8F8F8;
  background: #ffffff;
  position:relative;
  color:#444444;
  display: flex;
  /* align-items: center; */
}
.label{
  width: 40%;
}
.val{
  width: 55%;
  text-align: left;
  display: flex;
}
.list-wrap .list .val input{
  text-align: right;
  /* border:1px solid red; */
}
.list-wrap .list .function image{
  width:30rpx;
  height:30rpx;
  transform:rotate(180deg);
}
.btn{
  /* position:fixed; */
  /* 
  left:0;
  right: 0; */
  width:90%;
  color: #fff;
  margin:30rpx auto;
  font-size:30rpx;
  text-align: center;
  letter-spacing: 4rpx;
  bottom: 20rpx;
  height:80rpx;
  line-height: 80rpx;
  background:linear-gradient(132deg,rgba(30,105,198,1) 0%,rgba(72,50,197,1) 100%);
}
.logo{
  flex-direction: column;
}
.logo .val{
  width: 100%;
  flex-wrap: wrap;
}
.logo-wrap{
  display: flex;
  margin: 20rpx 20rpx 0 0 ;
  position:relative;
}
.logo-wrap image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.delete{
  position: absolute;
  width: 60rpx;
  right: -30rpx;
  top:-30rpx;
}
.delete image{
  width: 100%;
}
